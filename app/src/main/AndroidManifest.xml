<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mynirvana">

    <application
        android:name=".app.App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".presentation.meditationTimerActivity.MeditationTimerActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.meditationCreatorActivity.MeditationCreatorActivity"
            android:exported="false"
            android:theme="@style/Theme.MyNirvana" />
        <activity
            android:name=".presentation.mainActivity.MainActivity"
            android:exported="true"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>